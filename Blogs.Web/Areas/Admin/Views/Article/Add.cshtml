@model ArticleAdd
@{
    ViewBag.Title = "新增随笔";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
    var catalogList = ViewBag.CatalogList as List<Catalog>;
    var selectItemList = new List<SelectListItem>();
    for (int i = 0; i < catalogList.Count; i++)
    {
        selectItemList.Add(new SelectListItem() { Text = catalogList[i].Name, Value = catalogList[i].ID.ToString() });
    }
}


@section scripts{

    <script src="~/Scripts/jquery-3.4.1.min.js"></script>
    <script src="~/Scripts/jquery.validate.min.js"></script>
    <script src="~/Scripts/jquery.validate.unobtrusive.min.js"></script>
    <style type="text/css">
        .field-validation-error {
            color: red;
        }
    </style>
    <script src="~/Content/ueditor1_4_3_3/ueditor.config.js"></script>
    <script src="~/Content/ueditor1_4_3_3/ueditor.all.min.js"></script>
    <script src="~/Content/ueditor1_4_3_3/lang/zh-cn/zh-cn.js"></script>
    <script type="text/javascript">
        $(function () {
            //实例化编辑器
            //建议使用工厂方法getEditor创建和引用编辑器实例，如果在某个闭包下引用该编辑器，直接调用UE.getEditor('editor')就能拿到相关的实例
            var ue = UE.getEditor('editor');
        })
    </script>
}
<div class="panel-head"><strong><span class="icon-pencil-square-o"></span>@ViewBag.Title </strong></div>
<div class="body-content">
    <form method="post" class="form-x" action="">
        <div class="form-group">
            <div class="label">
                <label>名称：</label>
            </div>
            <div class="field">
                @Html.TextBoxFor(m => m.Title, new { @class = "input" })
                <div class="tips">
                    @Html.ValidationMessageFor(m => m.Title)
                </div>
            </div>
        </div>

        <div class="form-group">
            <div class="label">
                <label>内容：</label>
            </div>
            <div class="field">
                <script id="editor" name="content" type="text/plain" style="width:1024px;height:500px;">
                </script>
                @Html.ValidationMessageFor(m => m.Content)
            </div>
        </div>
    </form>
</div>
<div class="form-group">
    <div class="label">
        <label></label>
    </div>
    <div class="field">
        <button class="button bg-main icon-check-square-o" type="submit"> 提交</button>
    </div>
</div>

<div class="form-group">
    <div class="label">
        <label>栏目：</label>
    </div>
    <div class="field">      
            @Html.DropDownListFor(m => m.Title, selectItemList, new { @class = "input" })
        <div class="tips">
            @Html.ValidationMessageFor(m => m.Title)
        </div>

    </div>
</div>




